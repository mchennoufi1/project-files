{% extends 'base.html.twig' %}

{# templates/index/index.html.twig #}
{% block body %}
    <div class="example-wrapper">
<br>
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
            </tr>
            {% for data in category %}

            <tr>
                <td><a href="{{ path('app_pizza', {'id': data.id}) }}">{{ data.name }}</a></td>
                <td>{{ data.description }}</td>
                <td><img src="img/{{ data.img }}" style="width: 150px"></td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}


