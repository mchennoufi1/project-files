{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Size</th>
            <th>Customer Name</th>
            <th>Customer Address</th>
        </tr>
        {% for data in order %}
                <tr>
                    <td>{{ data.name }}</td>
                    <td>{{ data.price }}</td>
                    <td>{{ data.quantity }}</td>
                    <td>{{ data.size }}</td>
                    <td>{{ data.customerName }}</td>
                    <td>{{ data.customerAddress }}</td>
                </tr>
        {% endfor %}
    </table>
{% endblock %}